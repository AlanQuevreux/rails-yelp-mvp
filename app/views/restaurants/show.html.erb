<h1>Details of Restaurant</h1>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @restaurant.name %></h1>
  </div>

<div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Address : <%= @restaurant.address %></li>
    <li class="list-group-item">Food Category : <%= @restaurant.category %></li>
    <li class="list-group-item"><p><strong>Reviews</strong></p>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><%= review.content %></li>
        <% end %>
      </ul>
      <br> <%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %> </li>
  </ul>
</div>

  <hr>
  <%= link_to restaurants_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
</div>
